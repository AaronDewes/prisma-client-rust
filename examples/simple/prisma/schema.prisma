datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:postgres@localhost:15432/readme"
}

generator client {
    provider      = "prisma-client-rust"
    binaryTargets = ["native"]
    output        = "../src/db.rs"
}

model User {
    id          String @id @map("username")
    displayName String

    posts Post[]
}

model Post {
    id      String @id
    content String

    user   User   @relation(fields: [userId], references: [id])
    userId String
}
