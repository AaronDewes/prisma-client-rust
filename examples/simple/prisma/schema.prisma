datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:postgres@localhost:15432/simple"
}

generator client {
    provider      = "prisma-client-rust"
    binaryTargets = ["native"]
    output        = "../src/db"
}

model Post {
    id         String    @id
    name       String?
    comments   Comment[] @relation()
    category   Category? @relation(fields: [categoryID], references: [id])
    categoryID String?
}

model Comment {
    id String @id

    postId String 
    post   Post   @relation(fields: [postId], references: [id])
}

model Category {
    id     String @id @default(cuid())
    name   String
    weight Int?
    posts  Post[]
}
