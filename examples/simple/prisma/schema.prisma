datasource db {
    provider = "postgresql"
    url      = "file:../dev.db"
}

generator client {
    provider      = "prisma-client-rust"
    binaryTargets = ["native"]
    output        = "../src/db.rs"
}

model User {
    id          String   @id
    displayName String
    typ        UserType

    posts Post[]
}

model Post {
    id      String @id
    content String

    user   User   @relation(fields: [userId], references: [id])
    userId String
}

enum UserType {
    Regular
    Admin
}
