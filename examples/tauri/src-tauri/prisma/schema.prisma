datasource db {
    provider = "sqlite"
    url      = "file:../dev.db"
}

generator client {
    provider = "cargo prisma"
    output   = "../src/db.rs"
}

model Post {
    id      Int    @id @default(autoincrement())
    title   String
    content String

    comments Comment[]
}

model Comment {
    id      Int    @id @default(autoincrement())
    message String

    postId Int
    post   Post @relation(fields: [postId], references: [id])
}
